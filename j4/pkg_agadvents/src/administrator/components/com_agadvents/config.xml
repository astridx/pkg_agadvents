<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset
		name="agadvent"
		label="COM_AGADVENTS_FIELD_CONFIG_INDIVIDUAL_AGADVENT_DISPLAY"
		description="COM_AGADVENTS_FIELD_CONFIG_INDIVIDUAL_AGADVENT_DESC"
		>
		<field
			name="show_agadvent_name_label"
			type="list"
			label="COM_AGADVENTS_FIELD_AGADVENT_SHOW_CATEGORY_LABEL"
			default="1"
			>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

		<field
			name="custom_fields_enable"
			type="radio"
			label="JGLOBAL_CUSTOM_FIELDS_ENABLE_LABEL"
			layout="joomla.form.field.radio.switcher"
			default="1"
			>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

		<field
			name="show_name"
			type="radio"
			label="COM_AGADVENTS_FIELD_PARAMS_NAME_LABEL"
			default="1"
			layout="joomla.form.field.radio.switcher"
			>
			<option value="0">JHIDE</option>
			<option value="1">JSHOW</option>
		</field>
	</fieldset>
	<fieldset
		name="permissions"
		label="JCONFIG_PERMISSIONS_LABEL"
		description="JCONFIG_PERMISSIONS_DESC"
		>
		<field
			name="rules"
			type="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			validate="rules"
			filter="rules"
			component="com_agadvents"
			section="component"
		/>
	</fieldset>
</config>
